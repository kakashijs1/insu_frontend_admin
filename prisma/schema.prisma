generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  Employee
  Super
  Affiliate
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  password  String
  role      UserRole @default(Employee) // Employee, Super, Affiliate
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
